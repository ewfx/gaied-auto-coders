{
    "request_types": {
      "Adjustment": ["Adjustment"],
      "AU Transfer": ["AU Transfer"],
      "Closing Notice": ["Reallocation Fees", "Amendment Fees", "Cashless Principal", "Decrease Roll"],
      "Commitment Change": ["Increase", "Ongoing Fee"],
      "Fee Payment": ["Letter of Credit Fee", "Principal", "Interest"],
      "Money Movement-Inbound": ["Principal+Interest", "Principal+Interest+Fee"],
      "Money Movement-Outbound": ["Timebound", "Foreign Currency"]
    },
    "extract_fields": {
      "deal_name": "Deal Name: (.*?)\\n",
      "amount": "Amount: \\$(.*?)\\n",
      "expiration_date": "Expiration Date: (.*?)\\n"
    },
    "paths": {
      "email_files_dir": "email_files",
      "classifications_dir": "classifications",
      "email_processing_log_file": "email_processing.log",
      "duplicates_file": "duplicates.json",
      "email_generation_log_file": "email_generation.log"
    },
    "gpt2": {
      "model_name": "gpt2",
      "max_length_input": 512,
      "max_length_output": 600
    },
    
    "subjects": [
        "Request for {request_type} - {sub_request_type}",
        "Urgent: {request_type} Processing - {sub_request_type}",
        "Follow-up: {request_type} - {sub_request_type}"
    ],
    "bodies": [
        "Dear Team,\n\nPlease process the following request:\nRequest Type: {request_type}\nSub-Request Type: {sub_request_type}\nDeal Name: Deal-{deal_id}\nAmount: ${amount}\nExpiration Date: {expiration_date}\n\nBest regards,\nJohn Doe",
        "Hi,\n\nI need assistance with:\nRequest Type: {request_type}\nSub-Request Type: {sub_request_type}\nDeal Name: Deal-{deal_id}\nAmount: ${amount}\nExpiration Date: {expiration_date}\n\nThanks,\nJane Smith"
    ],
    "bank_names": [
        "Bank of Example",
        "Global Finance Bank",
        "United Trust Bank",
        "Capital One Bank",
        "First National Bank"
    ],
    "random_names": {
        "first": ["Alpha", "Beta", "Gamma", "Delta", "Echo"],
        "last": ["Corp", "Inc", "LLC", "Group", "Solutions"]
    },
    "date_range": {
        "start_date": "2025-01-01",
        "end_date": "2025-12-31",
        "expiration_date": "2025-12-31"
    },
    "amount_range": {
        "min_amount": 1000000,
        "max_amount": 10000000,
        "adjustment_increment_min": 1000,
        "adjustment_increment_max": 50000
    },
    "attachment_details": {
        "pdf": {
        "title": "Financial Transaction Document",
        "title_font": "Helvetica-Bold",
        "title_font_size": 16,
        "content_font": "Helvetica",
        "content_font_size": 12,
        "footer": "Generated by Example Bank - Confidential",
        "footer_font": "Helvetica-Oblique",
        "footer_font_size": 10,
        "filename_prefix": "attachment_deal_",
        "filename_suffix": ".pdf",
        "title_position": [1, -1],
        "content_position": [1, -1.5],
        "footer_position": [1, 0.5]
        },
        "docx": {
        "title": "Financial Transaction Document",
        "title_level": 1,
        "footer": "Generated by Example Bank - Confidential",
        "footer_font_size": 10,
        "footer_italic": true,
        "filename_prefix": "attachment_deal_",
        "filename_suffix": ".docx"
        }
    },
    "email_chain": {
        "num_emails_in_chain_min": 1,
        "num_emails_in_chain_max": 3,
        "sender_email_prefix": "sender",
        "sender_email_domain": "@example.com",
        "recipient_email": "recipient@example.com",
        "reply_prefix": "Re: ",
        "reply_body": "Replying to your email regarding {request_type}...\n\nOriginal Message:\n{body}"
    },
    "processing": {
        "num_emails": 100,
        "deal_id_min": 1000,
        "deal_id_max": 9999,
        "amount_min": 1000,
        "amount_max": 100000
    }

  }